{
  "name": "mercurius-explain-graphiql-plugin",
  "version": "2.2.4",
  "description": "This is the graphiql plugin for mercurius-explain plugin for mercurius.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/mercurius-explain-graphiql-plugin.git"
  },
  "homepage": "/",
  "keywords": [
    "mercurius"
  ],
  "author": "Davide Fiorello <davide@codeflyer.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/mercurius-explain-graphiql-plugin/issues"
  },
  "dependencies": {
    "d3": "^7.9.0"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "jest --setupFilesAfterEnv ./src/setupTests.js",
    "test:ci": "cross-env CI=true npm test",
    "prepare": "husky",
    "lint": "eslint src/**/*.jsx",
    "lint:fix": "eslint --fix",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-react": "^7.24.1",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@graphiql/react": "^0.21.0",
    "@graphiql/toolkit": "^0.9.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "graphiql": "^3.2.0",
    "graphql": "^16.8.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.5.3",
    "vite-plugin-svgr": "^3.3.0",
    "web-vitals": "^3.5.2"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css)$": "babel-jest",
      "\\.svg": "<rootDir>/src/test/mocks/svg.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!d3|d3-array|internmap|delaunator|robust-predicates)"
    ]
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd": "dist/umd/index.js",
  "files": [
    "dist"
  ]
}
