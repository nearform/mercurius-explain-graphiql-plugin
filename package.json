{
  "name": "mercurius-explain-graphiql-plugin",
  "version": "2.2.0",
  "description": "This is the graphiql plugin for mercurius-explain plugin for mercurius.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/mercurius-explain-graphiql-plugin.git"
  },
  "homepage": "/",
  "keywords": [
    "mercurius"
  ],
  "author": "Davide Fiorello <davide@codeflyer.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/mercurius-explain-graphiql-plugin/issues"
  },
  "dependencies": {
    "d3": "^7.6.1"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "jest --setupFilesAfterEnv ./src/setupTests.js",
    "test:ci": "cross-env CI=true npm test",
    "prepare": "husky install",
    "lint": "eslint src/**/*.jsx",
    "lint:fix": "eslint --fix",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@graphiql/react": "^0.19.1",
    "@graphiql/toolkit": "^0.8.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@svgr/rollup": "8.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@vitejs/plugin-react": "^4.0.0",
    "babel-jest": "^29.2.2",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.9",
    "eslint-plugin-react-hooks": "^4.6.0",
    "graphiql": "^3.0.0",
    "graphql": "^16.6.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.79.1",
    "rollup-plugin-dts": "^4.2.3",
    "rollup-plugin-jsx": "^1.0.3",
    "rollup-plugin-postcss": "^4.0.2",
    "vite": "^4.0.1",
    "vite-plugin-svgr": "^3.2.0",
    "web-vitals": "^3.0.3"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css)$": "babel-jest",
      "\\.svg": "<rootDir>/src/test/mocks/svg.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!d3|d3-array|internmap|delaunator|robust-predicates)"
    ]
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd": "dist/umd/index.js",
  "files": [
    "dist"
  ]
}
